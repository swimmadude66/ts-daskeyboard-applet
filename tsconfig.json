{
    "compilerOptions": {
      "target": "es6",
      "module": "ES2020",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "noImplicitAny": false,
      "outDir": "./dist",
      "typeRoots": [
        "node_modules/@types/"
      ]
    },
    "include": [
      "src"
    ],
    "exclude": [
      "tests/",
      "**/*.spec",
      "node_modules/"
    ]
  }